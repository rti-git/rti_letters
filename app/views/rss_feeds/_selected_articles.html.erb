<div data-controller="generate-newsletter">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>產生文章</h2>
        <% if @rss_feed_items.present? %>
          <%= form_with(url: create_newsletter_rss_feeds_path, method: :post, data: { stimulus: "generate-newsletter" }) do |form| %>
           

            <div id="selected_articles" data-generate-newsletter-target="selectedArticles">
            </div>

            <div>
              <%= form.submit "建立電子報", data: { action: "click->generate-newsletter#generate" } %>
            </div>
          <% end %>
        <% else %>
          <p>No selected articles</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div data-controller="generate-newsletter">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>所有的RSS文章</h2>
        <ul data-target="generate-newsletter.rssArticles">
        </ul>
      </div>
      <div class="col-md-6">
        <h2>產生文章</h2>
        <ul data-target="generate-newsletter.selectedArticles">
          <% @selected_articles.each do |article| %>
            <li><%= article.title %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

